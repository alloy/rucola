class <%= name.camel_case %>Controller < Rucola::WindowController::Base
  # To use this controller, do the following in for instance
  # your ApplicationController's awakeFromNib method.
  #
  #   def awakeFromNib
  #     @<%= name.snake_case %>_controller = <%= name.camel_case %>Controller.alloc.init
  #     @<%= name.snake_case %>_controller.showWindow(self)
  #   end
  
  def awakeFromNib
    puts "\n<%= name.camel_case %> controller awoke."
    puts "Edit: app/controllers/<%= name.snake_case %>_controller.rb"
  end
  
  def windowDidLoad
    puts "\n<%= name.camel_case %>'s Window has been loaded."
  end
  
end